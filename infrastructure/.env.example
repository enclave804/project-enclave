# Project Enclave - Environment Variables
# Copy this to .env and fill in your values.

# ============================================================================
# REQUIRED
# ============================================================================

# Anthropic (Claude API)
ANTHROPIC_API_KEY=sk-ant-...

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=eyJ...

# Apollo.io
APOLLO_API_KEY=your-apollo-api-key

# ============================================================================
# EMAIL SENDING (choose one)
# ============================================================================

# SendGrid
SENDGRID_API_KEY=SG...

# OR Mailgun
# MAILGUN_API_KEY=key-...
# MAILGUN_DOMAIN=mail.enclaveguard.com

# ============================================================================
# EMBEDDINGS (for RAG)
# ============================================================================

# OpenAI (for text-embedding-3-small)
OPENAI_API_KEY=sk-...

# OR Voyage AI
# VOYAGE_API_KEY=voy-...

# ============================================================================
# ENRICHMENT (optional - for Enclave Guard vertical)
# ============================================================================

# Shodan
SHODAN_API_KEY=your-shodan-key

# BuiltWith
# BUILTWITH_API_KEY=your-builtwith-key

# ============================================================================
# n8n
# ============================================================================

N8N_BASE_URL=http://localhost:5678
N8N_WEBHOOK_SECRET=your-webhook-secret

# ============================================================================
# VERTICAL SELECTION
# ============================================================================

# Which vertical to run (matches directory name in verticals/)
ACTIVE_VERTICAL=enclave_guard
